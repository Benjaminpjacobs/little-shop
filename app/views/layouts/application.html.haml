!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title LittleShop
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
  %body
    %nav
      %ul.nav-ul
        %li.nav-link=link_to "View Cart", carts_path
        %li.nav-link=render partial: "/layouts/#{current_guest}"
        %li.nav-link=link_to "Gear", items_path

    -flash.each do |name, message|
      =message

    = yield
