%h1 Shopping Cart
.cart
  -session[:cart].each do |item_id, quantity|
    -item = Item.find_by(id: item_id)
    .cart-item
      %div=image_tag(item.image)
      %p=item.name
      %p=item.price
      %p=item.description
      %p=quantity
      %p=item.price*quantity
      -# -button_to 'Remove', carts_path(item_id:, item.id)
    =form_tag carts_items_path(item_id: item.id) do
      =button_tag "Remove", type: :submit
  =@cart.total_price
