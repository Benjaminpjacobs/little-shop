%table
  -@order.order_items.each do |order_item|
    -# -binding.pry
    %tr
      %th
        Item Name
      %th
        Item Qty
      %th
        Subtotal
    %tr
      %td
        =link_to order_item.item.name, item_path(order_item.item)
      %td#qty
        =order_item.qty
      %td
        =number_to_currency(order_item.line_item_subtotal)
%p
  Total:
  =number_to_currency(@order.total)
%p=render partial: "#{@order.status}"


