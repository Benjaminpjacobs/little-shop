%h1 All Items
.all-items
  -@items.each do |item|
    .item-preview
      .item-thumb=link_to(image_tag(item.image), item_path(item))
      .item-text
        %h2
          =link_to "#{item.name[0..19]}...", item_path(item)
        %p="#{item.description[0..45]}..."
        %p=number_to_currency(item.price)
        .add-to-cart-button
          =render partial: "item_status_#{item.status}", :locals => {:item => item}

=will_paginate @users
