.create-account-box
  =render partial: 'shared/errors', locals: { target: @user.errors } if @user.errors.any?
  =form_for([:admin, @user]) do |f|
    =f.label :email
    =f.text_field :email

    =f.label :first_name
    =f.text_field :first_name

    =f.label :last_name
    =f.text_field :last_name

    =f.submit "Update Profile"
