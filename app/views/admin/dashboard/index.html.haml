.user-dashboard
  %h2 Welcome Admin

  %h3
    =current_user.full_address unless current_user.addresses.empty?
    =current_user.email
    =link_to "Edit", edit_admin_user_path(current_user)

  %h4
    =link_to "View All Items", admin_items_path
  %h4
    =link_to "View All Categories", admin_categories_path
  %h4
    =link_to "Add New Category", new_admin_category_path


  .order-filter
    %ul
      %li
        %h4 Filters:
      %li
        =link_to "Ordered (#{@count[:ordered]})",'#', id: "ordered"

      %li
        =link_to "Paid (#{@count[:paid]})", "#", id: "paid"

      %li
        =link_to "Cancelled (#{@count[:cancelled]})", "#", id: "cancelled"

      %li
        =link_to "Completed (#{@count[:completed]})", "#", id: "completed"

      %li
        =link_to "Show All", "#", id: "all"
  .all-orders
