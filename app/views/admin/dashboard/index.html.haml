.user-dashboard
  %h2 Welcome Admin

  %h3
    =current_user.full_address unless current_user.addresses.empty?
    =current_user.email
    =link_to "Edit", edit_admin_user_path(current_user)

  %ul.order-filter
    %li
      Ordered:
      =@orders[:ordered].count
    %li
      Paid:
      =@orders[:paid].count
    %li
      Cancelled:
      =@orders[:cancelled].count
    %li
      Completed:
      =@orders[:completed].count


  .ordered
    %p Ordered
    =@orders[:ordered]
    =@orders[:ordered].count

    -#   =order.user.email if order.status == 0
    =button_to "Cancel"
    =button_to "Paid"
