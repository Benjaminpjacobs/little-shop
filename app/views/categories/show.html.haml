%h1=@category.title
.all-items
  -@items.each do |item|
    .item-preview
      .item-thumb=image_tag(item.image)
      .item-text
        %h2
          =link_to item.name, item_path(item)
        %p="#{item.description[0..45]}..."
        %p=number_to_currency(item.price)
        .add-to-cart-button
          =button_to "Add to Cart", carts_path(item_id: item.id)

=will_paginate @items
