.create-account-box
  =form_for [@user, @address] do |f|

    =f.label :email
    =f.text_field :email

    =f.label :first_name
    =f.text_field :first_name

    =f.label :last_name
    =f.text_field :last_name

    =f.label :password
    =f.password_field :password

    =f.label :street_address
    =f.text_field :street_address

    =f.label :state
    =f.text_field :state

    =f.label :city
    =f.text_field :city

    =f.label :zipcode
    =f.text_field :zipcode

    =f.submit "Create Account"
