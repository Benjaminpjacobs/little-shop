=render partial: 'shared/errors', locals: { target: @user.errors } if @user.errors.any?


.create-account-box
  =form_for @user do |f|
    =f.label :email
    =f.text_field :email

    =f.label :first_name
    =f.text_field :first_name

    =f.label :last_name
    =f.text_field :last_name

    =f.label :password
    =f.password_field :password

    =f.submit "Create Account"
